<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_to_do_item_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.keepmeposted.views.activity.ToDoItemEditActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp"
        android:id="@+id/appBarLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_margin"
        android:layout_marginRight="@dimen/card_margin"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="389dp"
        android:layout_weight="0.41"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/topbar"
        android:layout_alignParentEnd="true">

        <TextView
            android:text="Item name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topbar"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:id="@+id/textViewItem" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint=""
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/editTextPi" />

        <TextView
            android:text="Quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topbar"
            android:layout_marginTop="8dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:id="@+id/textViewQuantity" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:weightSum="1">


            <RadioButton
                android:text="Low"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonLow"
                android:layout_marginTop="5dp"
                android:layout_weight="0.10" />

            <RadioButton
                android:text="Full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonFull"
                android:layout_marginTop="5dp"
                android:layout_weight="0.22" />
        </LinearLayout>

        <TextView
            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topbar"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/textViewPrice" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:weightSum="1">

            <TextView
                android:text="Rs."
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:id="@+id/textViewCrr"
                android:textSize="15sp"
                android:layout_marginLeft="0dp"
                tools:textSize="15sp"
                android:textAlignment="center"
                android:layout_weight="0.61" />

            <EditText
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint=""
                android:ems="10"
                android:layout_marginLeft="20dp"
                android:id="@+id/editTextPrice" />

        </LinearLayout>

        <TextView
            android:text="Expiration Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topbar"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/textViewExp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint=""
            android:ems="10"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/editTextExp" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/picanceltxtview"
                android:layout_height="match_parent"
                android:text="CANCEL"
                android:background="@color/white"
                android:layout_width="128dp"
                android:paddingLeft="40dp"
                android:textSize="18dp"
                android:paddingTop="10dp"
                style="@style/MyButtonCancel"
                android:layout_weight="0.44" />

            <TextView
                android:id="@+id/pisavetxtview"
                android:layout_height="match_parent"
                android:text="SAVE"
                android:layout_width="119dp"
                android:paddingLeft="60dp"
                android:background="@color/white"
                style="@style/MyButton"
                android:textSize="18dp"
                android:paddingTop="10dp"
                android:layout_weight="0.67" />

        </LinearLayout>


    </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
